{{> header}}

<main>
    <h1>Login</h1>
    <form action="/login" method="post">
            <input class="form_input" type="email" id="email" name="email" placeholder="E-Mail" required />
            <input class="form_input" type="password" id="password" name="password" placeholder="Passwort" required />
            <button class="button" type="submit">Login</button>
    </form>
    <p>Hast du noch kein Konto?</p>
    <a class="link_r" href="/register">Jetzt registrieren</a>
</main>

{{> footer}}